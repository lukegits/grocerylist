<p id="notice"><%= notice %></p>

<h1>Our Grocery List!</h1>

<table class="table table-bordered">

  <tbody>
    <% @lists.each do |list| %>

<% if list.completed %>
      <tr class= 'table-secondary'>
        <td class='.striker'><%= list.description %></td>
        <td>
            <center>
            <%= form_for(list) do |f| %>
            <%= f.text_field :description, type: 'hidden' %>
            <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden'%>
            <%= f.submit "Checked", class: 'btn btn-outline-secondary btn-sm' %>
            <% end %>
            </center>
          </td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Delete', list, class: 'btn btn-outline-danger bt-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

       <% else %>
      <tr>
       <td><%= list.description %></td>
       <td>
           <center>
           <%= form_for(list) do |f| %>
           <%= f.text_field :description, type: 'hidden' %>
           <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden'%>
           <%= f.submit "Unchecked", class: 'btn btn-outline-secondary btn-sm' %>
           <% end %>
           </center>
         </td>
       <td><%= link_to 'Edit', edit_list_path(list) %></td>
       <td><%= link_to 'Delete', list, class: 'btn btn-outline-danger bt-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr>
     <% end %>
    <% end %>
  </tbody>
</table>

<br>

